{ 
    "suggest.enablePreview": true,
    "list.maxPreviewHeight": 25,
    "diagnostic.checkCurrentLine": true,
    "languageserver": {
      "haskell": {
        "command": "hie-wrapper",
        "disableCompletion": false,
        "rootPatterns": [
          ".stack.yaml",
          "cabal.config",
          "package.yaml"
        ],
        "filetypes": [
          "hs",
          "lhs",
          "haskell"
        ],
        "initializationOptions": {
          "languageServerHaskell": {
            "hlintOn": true, 
            "completionSnippetsOn": false
          }
        } 
      } 
    }
}
